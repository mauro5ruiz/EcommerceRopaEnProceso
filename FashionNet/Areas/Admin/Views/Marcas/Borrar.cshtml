@model FashionNet.Modelos.Marca

@{
    ViewData["Title"] = "Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    @*Favicon*@
    <link href="~/img/favicon.ico" rel="icon">

    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<h1>Borrar</h1>

<h3>¿Desea eliminar la marca?</h3>
<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UrlImagen)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.UrlImagen))
            {
                <img src="@Url.Content(Model.UrlImagen)" alt="Image" style="width:90px;height:90px;max-width: 100%; height: auto;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Borrar">
        <input type="hidden" asp-for="MarcaId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-info" })
    </form>
</div>
<partial name="_Footer2" />
