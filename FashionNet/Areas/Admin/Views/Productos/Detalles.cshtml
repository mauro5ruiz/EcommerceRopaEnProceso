@model FashionNet.Modelos.ViewModels.ProductoVM

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*Favicon*@
    <link href="~/img/favicon.ico" rel="icon">

    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<h2>Detalles</h2>
<div class="row">
    <div class="col-md-6">
        <div>
            <h4>Producto</h4>
            <hr />
            <div class="dl-horizontal"></div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Producto.Categoria)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Producto.Categoria.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Producto.SubCategoria)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Producto.SubCategoria.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Producto.Descripcion)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Producto.Descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Producto.Marca)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Producto.Marca.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Producto.Estado)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Producto.Estado)
                </dd>
            </dl>
        </div>
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.Producto.ProductoId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Volver a la Lista", "Index", new { }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Agregar stock", "AgregarStock", new { id = Model.Producto.ProductoId }, new { @class = "btn btn-link" })
        </p>
    </div>
    <div class="col-md-6">
        <h4>Stocks</h4>
        @if (Model.Stocks.Count > 0)
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Color.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Talle.NombreTalle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ColorTalle.Cantidad)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Stocks)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Color.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Talle.NombreTalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
            </tr>
                }

            </table>
        }
        else
        {
            <h4>No hay stocks en el producto</h4>
        }
    </div>
</div>
<partial name="_Footer2" />
