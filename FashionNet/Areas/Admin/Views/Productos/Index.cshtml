@model IEnumerable<FashionNet.Modelos.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*Favicon*@
    <link href="~/img/favicon.ico" rel="icon">

    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<h1>Listado de Producos</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-success">Nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @if (item.Estado == true)
                    {
                        @Html.DisplayNameFor(modelItem => item.Activo);
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Inactivo);
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoria.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.Nombre)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.ProductoId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Detalles" asp-route-id="@item.ProductoId" class="btn btn-info">Detalles</a> |
                    @if (item.Estado == true)
                    {
                        <a asp-action="Desactivar" asp-route-id="@item.ProductoId" class="btn btn-dark">Bloquear</a>
                    }
                    else
                    {
                        <a asp-action="Activar" asp-route-id="@item.ProductoId" class="btn btn-dark">Activar</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Footer2" />
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/easing/easing.min.js"></script>
<script src="~/lib/slick/slick.min.js"></script>

<!-- Template Javascript -->
<script src="~/js/main.js"></script>
