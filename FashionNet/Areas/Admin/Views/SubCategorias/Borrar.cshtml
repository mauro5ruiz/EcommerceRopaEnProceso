@model FashionNet.Modelos.SubCategoria

@{
    ViewData["Title"] = "Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    @*Favicon*@
    <link href="~/img/favicon.ico" rel="icon">

    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<h1>Borrar</h1>

<h3>¿Está seguro que desea borrar esta Sub-Categoría?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Borrar">
        <input type="hidden" asp-for="SubCategoriaId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-info" })
    </form>
</div>
<partial name="_Footer2" />