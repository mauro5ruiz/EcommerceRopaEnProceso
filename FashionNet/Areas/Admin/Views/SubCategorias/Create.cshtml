@model FashionNet.Modelos.ViewModels.SubCategoriaVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*Favicon*@
    <link href="~/img/favicon.ico" rel="icon">

    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<br />
<br />
<h1>Crear SubCategoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SubCategoria.CategoriaId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.SubCategoria.CategoriaId, Model.ListaCategorias,
                   "Selecciona la categoría", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SubCategoria.Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SubCategoria.Nombre" class="form-control" />
                    <span asp-validation-for="SubCategoria.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-10">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    @Html.ActionLink("Volver a la Lista", "Index", new { }, new { @class = "btn btn-info" })
                </div>
            </div>
        </form>
    </div>
</div>
<partial name="_Footer2" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
