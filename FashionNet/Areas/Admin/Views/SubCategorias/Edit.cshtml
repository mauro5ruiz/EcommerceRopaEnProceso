@model FashionNet.Modelos.ViewModels.SubCategoriaVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*Favicon*@
    <link href="~/img/favicon.ico" rel="icon">

    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<h1>Editar Sub-Categoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubCategoria.SubCategoriaId" />
            <div class="form-group">
                <label asp-for="SubCategoria.CategoriaId" class="control-label"></label>
                @Html.DropDownListFor(m => m.SubCategoria.CategoriaId, Model.ListaCategorias,
                   "Selecciona la categoría", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SubCategoria.Nombre" class="control-label"></label>
                <input asp-for="SubCategoria.Nombre" class="form-control" />
                <span asp-validation-for="SubCategoria.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-warning" />
                @Html.ActionLink("Volver a la Lista", "Index", new { }, new { @class = "btn btn-info" })
            </div>
        </form>
    </div>
</div>

<partial name="_Footer2" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
