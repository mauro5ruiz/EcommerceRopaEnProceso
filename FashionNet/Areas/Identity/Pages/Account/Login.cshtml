@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}


<link href="~/lib/slick/slick.css" rel="stylesheet">
<link href="~/lib/slick/slick-theme.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="~/css/style.css" rel="stylesheet">

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6 offset-3">
        <section>
            <form id="account" method="post">
                <h4>Use su cuenta local para ingresar.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            ¿Recordar cuenta?
                        </label>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Ingresar</button>
                </div>
                @*<div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-primary">¿Olvidó su contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">Registrarse como nuevo usuario</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn btn-outline-info">Reenviar confirmación de Email</a>
                        </p>
                    </div>*@
            </form>
        </section>
    </div>
</div>
<partial name="_Footer2" />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
